@model IEnumerable<BlockFlixDLL.Entities.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movie Index</h2>

<div class="row">
    <div class="col-md-12" style="margin-bottom: 20px;">
        <a class="btn btn-default" href="@Url.Action("Create", "Movies")">Create Movie</a>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerURL)
        </th>
        <th>@Html.DisplayNameFor(model => model.Genres)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <div class="truncate-url">@item.ImageURL</div>
            </td>
            <td>
                <div class="truncate-url">@item.TrailerURL</div>
            </td>
            <td>
                @foreach (var genre in item.Genres)
                {
                    @genre.Name@Html.Raw("&nbsp;")
                }

            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
